{
  "name": "apus",
  "version": "0.2.2",
  "description": "Apus Charts: A React charting library built with D3.js, offering interactive and customizable charts.",
  "homepage": "https://harshattray.github.io/apus/",
  "author": "Harsha Attray (https://github.com/harshattray)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harshattray/apus.git"
  },
  "keywords": [
    "react",
    "charts",
    "d3",
    "visualization",
    "typescript",
    "apus",
    "radar chart",
    "bar chart",
    "line chart",
    "stacked bar chart",
    "interactive charts"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "public",
    "screens"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build --config styleguide.config.cjs",
    "deploy": "gh-pages -d styleguide",
    "build:demo": "VITE_APP_BUILD=demo vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "vitest"
  },
  "peerDependencies": {
    "d3": "^7.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "d3": "^7.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.25.0",
    "@microsoft/api-extractor": "^7.52.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.17.52",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^8.4.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "postcss": "^8.4.21",
    "prettier": "^3.5.3",
    "react": "^18.2.0",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^18.2.0",
    "react-styleguidist": "^13.1.4",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4",
    "webpack": "^5.99.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
