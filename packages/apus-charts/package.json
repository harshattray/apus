    "./package.json": "./package.json"
  },
  "private": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "test": "vitest"
  },
  "peerDependencies": {
    "d3": "^7.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "d3": "^7.0.0",
    "d3-regression": "^1.3.10"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  }
